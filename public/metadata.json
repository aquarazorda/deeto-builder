[
  {
    "type": "group",
    "title": "Images",
    "description": "Here you can choose logo or background image",
    "elements": [
      {
        "type": "item",
        "behaviour": "image",
        "title": "Logo",
        "defaultValue": "/images/placeholder-logo.svg",
        "selectors": ["header img"]
      },
      {
        "type": "item",
        "behaviour": "background",
        "title": "Page background",
        "defaultValue": "#041527",
        "selectors": ["container"]
      }
    ]
  },
  {
    "type": "group",
    "title": "Colors",
    "description": "Here you can choose colors",
    "elements": [
      {
        "type": "group",
        "title": "Texts",
        "elements": [
          {
            "type": "item",
            "behaviour": "color",
            "title": "Text #1",
            "defaultValue": "black",
            "selectors": [".form-title"]
          },
          {
            "type": "item",
            "behaviour": "color",
            "title": "Text #2",
            "defaultValue": "white",
            "selectors": ["h1", "h2"]
          }
        ]
      }
    ]
  }
]
